<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="0dip"
    android:paddingLeft="0dip"
    android:paddingRight="0dip" >

    <LinearLayout
        android:layout_width="250dip"
        android:layout_height="180dip"
        android:orientation="vertical"
        android:padding="1dip"
        android:scaleType="fitXY" >

        <TextView
            android:id="@+id/tvPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:lines="3"
            android:padding="1dp"
            android:textColor="@color/grey2"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bStartStop"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_tap_and_speak"
            android:contentDescription="@string/buttonMicrophoneContentDescription"
            android:shadowColor="@color/shadow"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/llTranscribing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ProgressBar
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:indeterminate="true"
                android:indeterminateOnly="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/statusTranscribing"
                android:textColor="@color/grey2"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivWaveform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:contentDescription="@string/ivWaveformContentDescription" />
    </LinearLayout>

    <!-- 120 -->

    <LinearLayout
        android:id="@+id/llProgress"
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="1dip"
        android:scaleType="fitXY"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/tvBytes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/grey2"
            android:textSize="14sp" />

        <!-- android:format="%s" -->

        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/grey2"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvChunks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/grey2"
            android:textSize="12sp"
            android:typeface="monospace" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llError"
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:orientation="vertical"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/error"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/tvErrorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="1dp"
            android:text="@string/errorResultNetworkError"
            android:textColor="@color/grey2"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>